    keywordstyle=\bfseries\color{green!40!black},
    morecomment=[s]{"""}{"""},
    numbers=left,
    numbersep=5pt,
    numberstyle=\tiny\textcolor{gray},
    stringstyle=\ttfamily\color{red!50!brown},
    breakautoindent=true,
    postbreak=\mbox{\textcolor{red}{$\hookrightarrow$}\space},
    tabsize=4,
}

